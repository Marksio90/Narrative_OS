# Database
DATABASE_URL=postgresql://narrative:narrative@localhost:5432/narrative_os
SQL_ECHO=False

# Redis
REDIS_URL=redis://localhost:6379/0

# LLM Configuration
# Supports: openai, anthropic, custom
LLM_PROVIDER=openai
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here

# Optional: Custom LLM endpoint
CUSTOM_LLM_URL=http://localhost:11434/api/generate
CUSTOM_LLM_MODEL=llama2

# Security
SECRET_KEY=your_secret_key_here_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Frontend URL
FRONTEND_URL=http://localhost:3000

# S3-compatible storage (for exports and uploads)
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=narrative-os

# Environment
ENVIRONMENT=development
DEBUG=True
